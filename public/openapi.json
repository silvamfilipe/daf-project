{
    "openapi": "3.0.0",
    "info": {
        "title": "Forum DAF",
        "description": "Este projecto visa criar uma API REST para desenvolvimento de um site ou aplicação de\n          suporte, num formato de pergunta e respostas.<br />\n          Tem como principal objectivo testar a capacidade do aluno criar uma aplicação web, com\n          Symfony 4 e usando os padrões lecionados nas aulas da disciplina de “desenvolvimento de\n          aplicações com frameworks.",
        "contact": {
            "email": "silvam.filipe@gmail.com"
        },
        "version": "v0.1.0"
    },
    "paths": {
        "/questions/{questionId}/answers": {
            "post": {
                "tags": [
                    "Answers"
                ],
                "summary": "Adds an answer",
                "description": "Adds an answer to the question with the ID provided in the URP path",
                "operationId": "addAnswer",
                "parameters": [
                    {
                        "name": "questionId",
                        "in": "path",
                        "description": "ID of question that will be answered",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "$ref": "#/components/requestBodies/AddAnswer"
                },
                "responses": {
                    "200": {
                        "description": "The newlly crated question",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Answer"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            }
        },
        "/answers/{answerId}": {
            "patch": {
                "tags": [
                    "Answers"
                ],
                "summary": "Updates an answer",
                "description": "Updates the body of the answer that matches the provided answer ID",
                "operationId": "updateAnswer",
                "parameters": [
                    {
                        "name": "answerId",
                        "in": "path",
                        "description": "ID of answer to update",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "$ref": "#/components/requestBodies/AddAnswer"
                },
                "responses": {
                    "200": {
                        "description": "The updated question",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Answer"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            }
        },
        "/answers/{answerId}/vote-up": {
            "put": {
                "tags": [
                    "Answers"
                ],
                "summary": "Vote up an answer",
                "description": "Adds a positive/up vote to the answer that matches the provided answer ID",
                "operationId": "voteUpAnswer",
                "parameters": [
                    {
                        "name": "answerId",
                        "in": "path",
                        "description": "ID of answer to vote",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The updated question",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Answer"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            }
        },
        "/answers/{answerId}/vote-down": {
            "put": {
                "tags": [
                    "Answers"
                ],
                "summary": "Vote down an answer",
                "description": "Adds a negative/down vote to the answer that matches the provided answer ID",
                "operationId": "voteDownAnswer",
                "parameters": [
                    {
                        "name": "answerId",
                        "in": "path",
                        "description": "ID of answer to vote",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The updated question",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Answer"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            }
        },
        "/questions": {
            "get": {
                "tags": [
                    "Questions"
                ],
                "summary": "Returns a list of questions",
                "description": "Returns a paginated list of all questions",
                "operationId": "getQuestions",
                "parameters": [
                    {
                        "name": "tag",
                        "in": "query",
                        "description": "Tag name to filter",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "current pagination page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "rows",
                        "in": "query",
                        "description": "Number of rows per page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "pattern",
                        "in": "query",
                        "description": "Filters result with a search pattern",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of questions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/QuestionList"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            },
            "post": {
                "tags": [
                    "Questions"
                ],
                "summary": "Adds a new question for authenticated user",
                "operationId": "addQuestion",
                "requestBody": {
                    "$ref": "#/components/requestBodies/AddQuestion"
                },
                "responses": {
                    "400": {
                        "description": "Missing property or errors regarding data sent."
                    },
                    "200": {
                        "description": "The newlly crated question",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Question"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            }
        },
        "/questions/{questionId}": {
            "get": {
                "tags": [
                    "Questions"
                ],
                "summary": "Retrieve the question with provided ID",
                "description": "Returns a question",
                "operationId": "getQuestionById",
                "parameters": [
                    {
                        "name": "questionId",
                        "in": "path",
                        "description": "ID of question to return",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "The newlly crated question",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Question"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            },
            "delete": {
                "tags": [
                    "Questions"
                ],
                "summary": "Delete a question",
                "operationId": "deleteQuestion",
                "parameters": [
                    {
                        "name": "questionId",
                        "in": "path",
                        "description": "ID of question to delete",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "400": {
                        "description": "Missing property or errors regarding data sent."
                    },
                    "204": {
                        "description": "Question was delete"
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            },
            "patch": {
                "tags": [
                    "Questions"
                ],
                "summary": "Updates the question title and body",
                "operationId": "updateQuestion",
                "parameters": [
                    {
                        "name": "questionId",
                        "in": "path",
                        "description": "ID of question to update",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "$ref": "#/components/requestBodies/UpdateQuestion"
                },
                "responses": {
                    "400": {
                        "description": "Missing property or errors regarding data sent."
                    },
                    "200": {
                        "description": "The updated question",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Question"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            }
        },
        "/my/questions": {
            "get": {
                "tags": [
                    "Questions"
                ],
                "summary": "Returns a list of questions",
                "description": "Returns a paginated list of my questions",
                "operationId": "getMyQuestions",
                "parameters": [
                    {
                        "name": "tag",
                        "in": "query",
                        "description": "Tag name to filter",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "current pagination page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "rows",
                        "in": "query",
                        "description": "Number of rows per page",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "pattern",
                        "in": "query",
                        "description": "Filters result with a search pattern",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "A list of user questions",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/QuestionList"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "forum.usage"
                        ]
                    }
                ]
            }
        },
        "/users/me": {
            "get": {
                "tags": [
                    "Users"
                ],
                "summary": "Current user information",
                "operationId": "userInfo",
                "responses": {
                    "200": {
                        "description": "Current user information",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "OAuth2.0-Token": [
                            "user.management"
                        ]
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "ListingQuestion": {
                "title": "Question",
                "description": "A Flat Question used in lisings",
                "properties": {
                    "questionId": {
                        "title": "Question ID",
                        "description": "Question ID",
                        "type": "string"
                    },
                    "user": {
                        "title": "User",
                        "description": "Question owner",
                        "$ref": "#/components/schemas/User"
                    },
                    "title": {
                        "description": "Question title",
                        "type": "string",
                        "example": "An example question"
                    },
                    "tags": {
                        "title": "Tags",
                        "description": "Question tags",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "datePublished": {
                        "$ref": "#/components/schemas/DateTime"
                    },
                    "answersGiven": {
                        "description": "Answers given",
                        "type": "integer",
                        "example": "The number of answers given"
                    }
                },
                "type": "object"
            },
            "AddAnswer": {
                "title": "AddAnswer",
                "properties": {
                    "body": {
                        "description": "Answer main body",
                        "type": "string",
                        "example": "A short and smart answer"
                    }
                },
                "type": "object"
            },
            "AddQuestion": {
                "title": "Add Question",
                "properties": {
                    "title": {
                        "description": "Question title",
                        "type": "string",
                        "example": "A simple question"
                    },
                    "body": {
                        "description": "Question main body",
                        "type": "string",
                        "example": "How can we do something?"
                    },
                    "tags": {
                        "description": "Question title",
                        "type": "array",
                        "items": {
                            "type": "string",
                            "example": "PHP7"
                        }
                    }
                },
                "type": "object"
            },
            "QuestionList": {
                "properties": {
                    "attributes": {
                        "type": "object",
                        "additionalProperties": {
                            "type": "string"
                        }
                    },
                    "data": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/ListingQuestion"
                        }
                    },
                    "count": {
                        "type": "integer",
                        "example": 32
                    },
                    "isEmpty": {
                        "type": "bool",
                        "example": false
                    }
                },
                "type": "object"
            },
            "UpdateQuestion": {
                "title": "Update Question",
                "properties": {
                    "title": {
                        "description": "Question title",
                        "type": "string",
                        "example": "A simple question"
                    },
                    "body": {
                        "description": "Question main body",
                        "type": "string",
                        "example": "How can we do something?"
                    }
                },
                "type": "object"
            },
            "DateTime": {
                "properties": {
                    "date": {
                        "description": "Formatted date",
                        "type": "string",
                        "example": "2018-07-04 23:07:14.000000"
                    },
                    "timezone_type": {
                        "description": "Timezone type ID",
                        "type": "integer",
                        "format": "int32",
                        "example": "3"
                    },
                    "timezone": {
                        "description": "Timezone name",
                        "type": "string",
                        "example": "Atlantic/Azores"
                    }
                },
                "type": "object"
            },
            "Answer": {
                "title": "Answer",
                "description": "Answer",
                "properties": {
                    "user": {
                        "title": "User",
                        "description": "User relation",
                        "$ref": "#/components/schemas/User"
                    },
                    "questionId": {
                        "description": "Question identifer",
                        "type": "string",
                        "example": "06b116fe-e749-4f95-937d-94c5c4adcfbc"
                    },
                    "body": {
                        "description": "Answer body",
                        "type": "string",
                        "example": "A simple and powerfull answer!"
                    },
                    "answerId": {
                        "description": "Answer identifier",
                        "type": "string",
                        "example": "e1026e90-9b21-4b6d-b06e-9c592f7bdb82"
                    },
                    "datePublished": {
                        "$ref": "#/components/schemas/DateTime"
                    },
                    "correctAnswer": {
                        "description": "Correct answer",
                        "type": "boolean",
                        "example": true
                    },
                    "positiveVotes": {
                        "description": "Positive votes",
                        "type": "integer",
                        "example": 35
                    },
                    "negativeVotes": {
                        "description": "Negative votes",
                        "type": "integer",
                        "example": 6
                    }
                },
                "type": "object"
            },
            "Question": {
                "title": "Question",
                "description": "Question",
                "properties": {
                    "user": {
                        "title": "User",
                        "description": "User relation",
                        "$ref": "#/components/schemas/User"
                    },
                    "title": {
                        "description": "Question title",
                        "type": "string",
                        "example": "An example question"
                    },
                    "body": {
                        "description": "Question body",
                        "type": "string",
                        "example": "How can we create an API with Symfony 4?"
                    },
                    "tags": {
                        "title": "Tags",
                        "description": "Question tags",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Tag"
                        }
                    },
                    "questionId": {
                        "description": "Question identifier",
                        "type": "string",
                        "example": "e1026e90-9b21-4b6d-b06e-9c592f7bdb82"
                    },
                    "datePublished": {
                        "$ref": "#/components/schemas/DateTime"
                    },
                    "answers": {
                        "title": "Answers",
                        "description": "Question answers",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/Answer"
                        }
                    }
                },
                "type": "object"
            },
            "Tag": {
                "title": "Tag",
                "description": "Tag",
                "properties": {
                    "description": {
                        "description": "Tag description",
                        "type": "string",
                        "example": "HTML"
                    },
                    "tagId": {
                        "description": "Tag identifier",
                        "type": "string",
                        "example": "e1026e90-9b21-4b6d-b06e-9c592f7bdb82"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "User",
                "description": "User",
                "properties": {
                    "userId": {
                        "description": "User identifier",
                        "type": "string",
                        "example": "e1026e90-9b21-4b6d-b06e-9c592f7bdb82"
                    },
                    "name": {
                        "description": "User full name",
                        "type": "string",
                        "example": "John Doe"
                    },
                    "email": {
                        "description": "User's e-mail address",
                        "type": "string",
                        "example": "john.doe@example.com"
                    }
                },
                "type": "object"
            }
        },
        "requestBodies": {
            "AddAnswer": {
                "description": "Object containing the very minimal inforamtion nedded to create an answer",
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/AddAnswer"
                        }
                    }
                }
            },
            "AddQuestion": {
                "description": "Object containing the very minimal inforamtion nedded to create a question",
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/AddQuestion"
                        }
                    }
                }
            },
            "UpdateQuestion": {
                "description": "Object containing the changed title and body of a question to be updated.",
                "required": true,
                "content": {
                    "application/json": {
                        "schema": {
                            "$ref": "#/components/schemas/UpdateQuestion"
                        }
                    }
                }
            }
        },
        "securitySchemes": {
            "OAuth2.0-Token": {
                "type": "oauth2",
                "flows": {
                    "password": {
                        "tokenUrl": "https://forum-daf.fsilva.info/auth/access-token",
                        "scopes": {
                            "forum.usage": "Can use the forum to place questions, give answer and vote.",
                            "user.management": "Manage own user data"
                        }
                    }
                }
            }
        }
    },
    "tags": [
        {
            "name": "Users",
            "description": "User related endpoints"
        },
        {
            "name": "Questions",
            "description": "Questions endpoints"
        },
        {
            "name": "Answers",
            "description": "Answers endpoints"
        }
    ]
}